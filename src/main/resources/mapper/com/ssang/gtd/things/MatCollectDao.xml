<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssang.gtd.things.dao.MatCollectDao">
    <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
    <!--<resultMap type="CollecDto" id="CollectMap">
        <id column="c_no" property="c_no" />
        <result column="content" property="content" />
        <result column="is_material" property="is_material" />
        <result column="created_dt" property="created_dt" />
        <result column="updated_dt" property="updated_dt" />
    </resultMap>-->


    <select id="list" resultType="String">
        SELECT * FROM collection;
    </select>
    <select id="get" parameterType="int" resultType="com.ssang.gtd.things.dto.CollectionDto">
        SELECT * FROM user where c_no=#{id};
    </select>

    <insert id="post" parameterType="com.ssang.gtd.things.dto.MatColDto" useGeneratedKeys="true" keyColumn="mc_no" keyProperty="mcNo">
        insert into mat_collection(c_no,goal,content,g_dt) values(#{cNo},#{goal},#{content},#{gDt, jdbcType=DATE});
    </insert>
    <insert id="saveFile" parameterType="hashmap">
        insert into photo(
        board_type,
        file_name,
        saved_file_name,
        mc_no,
        file_size
        ) values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.board_type},
            #{item.file_name},
            #{item.saved_file_name},
            #{item.board_id},
            #{item.file_size}
            )
        </foreach>
    </insert>
    <update id="put" parameterType="com.ssang.gtd.things.dto.MatColDto">
        update mat_collection
        <set>
            <if test="goal != null">goal = #{goal},</if>
            <if test="content != null">content=#{content},</if>
            <if test="gDt != null">g_dt=#{gDt},</if>
        </set>
        where c_no=${cNo};
    </update>
    <delete id="delete" parameterType="int">
        delete from collection where c_no=#{id};
    </delete>

</mapper>