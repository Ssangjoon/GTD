<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssang.gtd.user.dao.MemberDao">
    <!-- 테이블의 컬럼과 객체필드를 연결한다. -->
    <!--<resultMap type="CollecDto" id="CollectMap">
        <id column="c_no" property="c_no" />
        <result column="content" property="content" />
        <result column="is_material" property="is_material" />
        <result column="created_dt" property="created_dt" />
        <result column="updated_dt" property="updated_dt" />
    </resultMap>-->


    <select id="list" resultType="com.ssang.gtd.user.dto.MemberDto">
        SELECT * FROM user;
    </select>
    <select id="get" parameterType="int" resultType="com.ssang.gtd.user.dto.MemberDto">
        SELECT * FROM user where u_no=#{id};
    </select>
    <select id="getByIdAndPassword" parameterType="com.ssang.gtd.user.dto.MemberDto" resultType="com.ssang.gtd.user.dto.MemberDto">
        SELECT * FROM user where id=#{id} and password=#{password};
    </select>
    <insert id="post" parameterType="com.ssang.gtd.user.dto.MemberDto">
        insert into user(u_no,id,name,password,email,public_key,private_key) values(#{uNo},#{id},#{name},#{password},#{email},#{publicKey},#{privateKey});
    </insert>
    <update id="put" parameterType="com.ssang.gtd.user.dto.MemberDto">
        update user set content=#{content} where c_no=${c_no};
    </update>
    <delete id="delete" parameterType="int">
        delete from user where c_no=#{id};
    </delete>
</mapper>