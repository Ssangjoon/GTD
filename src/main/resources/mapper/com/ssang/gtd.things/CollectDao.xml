    <select id="list" resultType="String">
        SELECT * FROM collection;
    </select>
    <select id="get" parameterType="int" resultType="com.ssang.gtd.things.CollectionDto">
        SELECT * FROM collection where c_no=#{id};
    </select>
    <insert id="post" parameterType="String">
        insert into collection(content) values(#{content});
    </insert>
    <update id="put" parameterType="com.ssang.gtd.things.CollectionDto">
        update collection set content=#{content} where c_no=${c_no};
    </update>
    <delete id="delete" parameterType="int">
        delete from collection where c_no=#{id};
    </delete>
</mapper>